{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "pkg",
      "description": "pkg",
      "type": "promptString"
    },
    {
      "id": "scope",
      "description": "scope",
      "type": "pickString",
      "options": [
        "@saili/common-all",
        "@saili/common-server",
        "@saili/engine-server",
        "@saili/dendron-cli",
        "@saili/pods-core",
        "sail-dendron"
      ]
    }
  ],
  "tasks": [
    {
      "label": "Lerna:Install",
      "type": "shell",
      "command": "./bootstrap/scripts/install.sh ${input:pkg} ${input:scope}",
      "options": {
        "cwd": "./.."
      },
      "problemMatcher": []
    },
    {
      "label": "Plugin: Pack, Install, Release",
      "dependsOn": [
        "Plugin: Package and Install",
        "Plugin: Release"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Everything",
      "dependsOn": [
        "NPM: Publish",
        "Plugin: Package and Install",
        "Plugin: Release"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}